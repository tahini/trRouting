{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Launch trRouting",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/src/trRouting",
            // Chagne project to fit where the cache files are, relative to workspace root or absolute
            "args": [ "--project=mon_test",
                "--port=4000",
                "--osrmPort=5000"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }, {
            "name": "(gdb) Launch Tests",
            "type": "cppdbg",
            "request": "launch",
            // When the program changes, make sure to change cwd if there are test files
            "program": "${workspaceFolder}/tests/cache_fetch/gtest",
            "args": [ ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/tests/cache_fetch",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}